<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/goodContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#BE000000">

    <ImageView
        android:id="@+id/movieImage2"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-20dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/movieImage2"
        android:ellipsize="end"
        android:fontFamily="monospace"
        android:maxLines="1"
        android:text="The Greatest Movie of All Time"
        android:textAlignment="center"
        android:textColor="#A6FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/movieDesc"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieTitle"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/movieImage2"
        android:ellipsize="end"
        android:fontFamily="monospace"
        android:maxLines="7"
        android:text="This is a great Movie, it is probably the best movie, and the only movie that should ever be aired in the movies, tv, theaters and just about any other film known to man"
        android:textAlignment="textStart"
        android:textColor="#A6FFFFFF" />

    <ImageView
        android:id="@+id/playButtonBad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/movieImage2"
        android:layout_alignTop="@+id/movieImage2"
        android:layout_alignEnd="@+id/movieImage2"
        android:layout_alignBottom="@+id/movieImage2"
        android:layout_marginStart="116dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/hot"
        android:layout_width="21dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/movieImage2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="47dp"
        tools:srcCompat="@drawable/fire" />

</RelativeLayout>